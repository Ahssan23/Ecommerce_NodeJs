<% get_products.forEach((elements)=>{ %> 

    <!DOCTYPE html>
    <html lang="en">
        <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>sadf</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; }
        .product-img { transition: transform 0.3s ease; }
        .product-img:hover { transform: scale(1.05); }
        .btn-primary { background: linear-gradient(90deg, #3B82F6, #60A5FA); }
        .btn-primary:hover { background: linear-gradient(90deg, #2563EB, #3B82F6); }
    </style>
</head>
<body class="bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow-sm sticky top-0 z-10">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <h1 class="text-2xl font-bold text-gray-900">VibeShop</h1>
            <nav class="flex items-center space-x-6">
                <a href="/" class="text-gray-700 hover:text-blue-600 transition-colors">Shop</a>
                <a href="/collections" class="text-gray-700 hover:text-blue-600 transition-colors">Collections</a>
                <a href="/about" class="text-gray-700 hover:text-blue-600 transition-colors">About</a>
                <div class="relative">
                    <a href="/cart" class="text-gray-700 hover:text-blue-600">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                    </a>
                    <span class="absolute -top-2 -right-2 bg-blue-600 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center">3</span>
                </div>
            </nav>
        </div>
    </header>

    <!-- Product Detail Section -->
    <main class="container mx-auto px-4 py-12">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 bg-white rounded-xl shadow-lg p-6">
            <!-- Product Image -->
            <div class="relative overflow-hidden rounded-lg">
                <img src="<%= elements.image %>" alt="<%= elements.title %>" class="product-img w-full h-[500px] object-cover">
                <span class="absolute top-4 left-4 bg-blue-600 text-white text-sm font-semibold px-3 py-1 rounded">In Stock</span>
            </div>
            
            <!-- Product Details -->
            <div class="flex flex-col justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= elements.title %></h1>
                    <p class="text-gray-600 text-lg mb-6"><%= elements.desc %></p>
                    <p class="text-4xl font-semibold text-gray-900 mb-6">$<%= elements.price %></p>
                    <div class="flex items-center space-x-4 mb-6">
                        <div class="flex items-center border rounded">
                            <button class="px-3 py-2 text-gray-600 hover:bg-gray-100">-</button>
                            <span class="px-4 py-2 text-gray-900">1</span>
                            <button class="px-3 py-2 text-gray-600 hover:bg-gray-100">+</button>
                        </div>
                        <form action="/add_cart" method="post">
                            <input type="hidden" name="id" value="<%= elements._id %>">
                            <button type="submit" class="btn-primary text-white font-semibold py-3 px-6 rounded-lg transition-colors">
                                Add to Cart
                            </button>
                        </form>
                    </div>
                    <div class="text-sm text-gray-500">
                        <p><span class="font-medium">SKU:</span> <%= elements.title.replace(/\s+/g, '-').toLowerCase() %></p>
                        <p><span class="font-medium">Category:</span> Premium Collection</p>
                    </div>
                </div>
                <div class="mt-6">
                    <h3 class="text-lg font-semibold text-gray-900">Shipping & Returns</h3>
                    <p class="text-gray-600 text-sm">Free shipping on orders over $50. Returns accepted within 30 days.</p>
                </div>
            </div>
        </div>
    </main>
    <% }) %>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-10">
        <div class="container mx-auto px-4 grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
                <h3 class="text-xl font-bold">VibeShop</h3>
                <p class="text-gray-400 mt-2">Curated products for a modern lifestyle.</p>
            </div>
            <div>
                <h3 class="text-xl font-bold">Quick Links</h3>
                <ul class="mt-2 space-y-2">
                    <li><a href="/faq" class="text-gray-400 hover:text-white transition-colors">FAQ</a></li>
                    <li><a href="/shipping" class="text-gray-400 hover:text-white transition-colors">Shipping</a></li>
                    <li><a href="/returns" class="text-gray-400 hover:text-white transition-colors">Returns</a></li>
                </ul>
            </div>
            <div>
                <h3 class="text-xl font-bold">Connect</h3>
                <p class="text-gray-400 mt-2">Email: support@vibeshop.com</p>
                <p class="text-gray-400">Phone: (123) 456-7890</p>
                <div class="flex space-x-4 mt-4">
                    <a href="#" class="text-gray-400 hover:text-white">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm5 11h-4v4h-2v-4H7v-2h4V7h2v4h4v2z"/></svg>
                    </a>
                    <a href="#" class="text-gray-400 hover:text-white">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M22 12c0-5.52-4.48-10-10-10S2 6.48 2 12c0 4.84 3.44 8.87 8 9.8V15H7v-3h3V9c0-2.76 1.79-5 4-5 1.11 0 2.15.18 3 .5V7h-1.5c-1.1 0-2 .9-2 2v3h3.5l-.5 3H13v6.8c4.56-.93 8-4.96 8-9.8z"/></svg>
                    </a>
                </div>
            </div>
        </div>
        <div class="mt-8 text-center text-gray-400 text-sm">
            Â© 2025 VibeShop. All rights reserved.
        </div>
    </footer>
</body>
</html>