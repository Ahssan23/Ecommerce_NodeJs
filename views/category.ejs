<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VibeShop - Premium E-commerce</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; }
        .hero-bg { background: linear-gradient(135deg, #4B5EAA 0%, #1E2A44 100%); }
        .product-card:hover .product-img { transform: scale(1.05); }
        .product-img { transition: transform 0.3s ease; }
        .btn-primary { background: linear-gradient(90deg, #3B82F6, #60A5FA); }
        .btn-primary:hover { background: linear-gradient(90deg, #2563EB, #3B82F6); }
        .dropdown:hover .dropdown-menu { display: block; }
        .dropdown-menu { transition: all 0.3s ease; }
    </style>
</head>
<body class="bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow-sm sticky top-0 z-10">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <h1 class="text-2xl font-bold text-gray-900">VibeShop</h1>
            <nav class="flex items-center space-x-6">
                <a href="#" class="text-gray-700 hover:text-blue-600 transition-colors">Shop</a>
                <!-- Categories Dropdown -->
                <div class="relative dropdown">
                    <button class="text-gray-700 hover:text-blue-600 transition-colors flex items-center">
                        Categories
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>
                    <div class="dropdown-menu hidden absolute mt-2 w-48 bg-white shadow-lg rounded-lg py-2 z-20">
                        <a href="/category/electronics" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">Electronics</a>
                        <a href="/category/clothing" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">Clothing</a>
                        <a href="/category/books" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">Accessories</a>
                        <a href="/category/home" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">Home</a>
                    </div>
                </div>
                <a href="#" class="text-gray-700 hover:text-blue-600 transition-colors">Collections</a>
                <a href="#" class="text-gray-700 hover:text-blue-600 transition-colors">About</a>
                <div class="relative">
                    <a href="/cart" class="text-gray-700 hover:text-blue-600">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                    </a>
                    <span class="absolute -top-2 -right-2 bg-blue-600 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center">3</span>
                </div>
            </nav>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero-bg text-white py-20">
        <div class="container mx-auto px-4 text-center">
            <h2 class="text-4xl md:text-5xl font-bold mb-4">Discover the Latest Trends</h2>
            <p class="text-lg md:text-xl mb-6">Shop premium products with style and quality.</p>
            <a href="#" class="inline-block btn-primary text-white font-semibold py-3 px-6 rounded-full transition-colors">Shop Now</a>
        </div>
    </section>

    <!-- Products Section -->
    <main class="container mx-auto px-4 py-12">
        <h2 class="text-3xl font-semibold text-gray-900 mb-8 text-center">Featured Products</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% products.forEach((elements) => { %>
                <div class="product-card bg-white rounded-xl shadow-lg overflow-hidden transform hover:-translate-y-1 transition-transform duration-300">
                    <div class="relative overflow-hidden">
                        <img src="<%= elements.image %>" alt="<%= elements.title %>" class="product-img w-full h-56 object-cover">
                        <div class="absolute top-2 right-2 bg-blue-600 text-white text-xs font-semibold px-2 py-1 rounded">New</div>
                    </div>
                    <div class="p-5">
                        <h3 class="text-lg font-semibold text-gray-900 truncate"><%= elements.title %></h3>
                        <p class="text-gray-500 text-sm mt-1 line-clamp-2"><%= elements.desc %></p>
                        <div class="flex justify-between items-center mt-4">
                            <p class="text-xl font-bold text-gray-900">$<%= elements.price %></p>
                            <div class="flex space-x-2">
                                <form action="/add_cart" method="post">
                                    <input type="hidden" name="id" value="<%= elements.id %>">
                                    <button class="btn-primary text-white text-sm font-medium py-2 px-4 rounded transition-colors">
                                        Add to Cart
                                    </button>
                                </form>
                                <form action="/view" method="post">
                                    <input type="hidden" name="id" value="<%= elements.id %>">
                                    <button class="bg-gray-200 text-gray-700 text-sm font-medium py-2 px-4 rounded hover:bg-gray-300 transition-colors">
                                        View Product
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-10">
        <div class="container mx-auto px-4 grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
                <h3 class="text-xl font-bold">VibeShop</h3>
                <p class="text-gray-400 mt-2">Elevate your shopping experience with curated products.</p>
            </div>
            <div>
                <h3 class="text-xl font-bold">Quick Links</h3>
                <ul class="mt-2 space-y-2">
                    <li><a href="/faq" class="text-gray-400 hover:text-white transition-colors">FAQ</a></li>
                    <li><a href="/shipping" class="text-gray-400 hover:text-white transition-colors">Shipping</a></li>
                    <li><a href="/returns" class="text-gray-400 hover:text-white transition-colors">Returns</a></li>
                </ul>
            </div>
            <div>
                <h3 class="text-xl font-bold">Connect</h3>
                <p class="text-gray-400 mt-2">Email: hello@vibeshop.com</p>
                <p class="text-gray-400">Phone: (123) 456-7890</p>
                <div class="flex space-x-4 mt-4">
                    <a href="#" class="text-gray-400 hover:text-white">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm5 11h-4v4h-2v-4H7v-2h4V7h2v4h4v2z"/></svg>
                    </a>
                    <a href="#" class="text-gray-400 hover:text-white">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M22 12c0-5.52-4.48-10-10-10S2 6.48 2 12c0 4.84 3.44 8.87 8 9.8V15H7v-3h3V9c0-2.76 1.79-5 4-5 1.11 0 2.15.18 3 .5V7h-1.5c-1.1 0-2 .9-2 2v3h3.5l-.5 3H13v6.8c4.56-.93 8-4.96 8-9.8z"/></svg>
                    </a>
                </div>
            </div>
        </div>
        <div class="mt-8 text-center text-gray-400 text-sm">
            Â© 2025 VibeShop. All rights reserved.
        </div>
    </footer>

    <!-- Mobile Dropdown Toggle Script -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const dropdown = document.querySelector('.dropdown');
            const dropdownMenu = document.querySelector('.dropdown-menu');
            dropdown.addEventListener('click', () => {
                if (window.innerWidth < 768) {
                    dropdownMenu.classList.toggle('hidden');
                }
            });
        });
    </script>
</body>
</html>